<div class="container jumbotron">
    <h3>Add New Shop</h3>
    <div class="row">
        <div class="col-md-12">
            <form>
                <div class="form-group">
                    <input type="text" name="shopname" ng-model="shopname" placeholder="Shop Name" class="form-control" />
                </div>
                <div class="form-group">
                    <textarea rows="5" cols="20" ng-model="shopaddress" placeholder="Enter Address" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" ng-click="addNewShop()">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>